module nabl2/lang/coq/util/mbind-err

signature
	
	constructors
		Error: String -> TopLevel // Adds error as a Coq TopLevel production

rules // Monadic style bind operation

	mbind(s):	
		Error(str) -> Error(str)

	mbind(s):
		x -> <s> x
		where
			not(?Error(_))

rules // Error handling

 	err:
 		string -> Error(string)
 		with
 			<debug> string

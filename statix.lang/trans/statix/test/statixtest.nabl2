module statix/test/statixtest

imports

  signatures/statix/lang/-

rules

  [[ Test(vs, c, sections) ^ (s) ]] :=
    Sections[[ sections ^ (s) ]],
    new s', s' ---> s,
    Map1(VarDecl)[[ vs ^ (s') ]],
    distinct/name D(s')/Var | error $[Duplicate local variable [NAME]] @NAMES,
    [[ c ^ (s') ]].
